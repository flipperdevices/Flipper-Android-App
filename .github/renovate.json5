{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
    'group:all',
    'schedule:weekly',
  ],
  gradle: {
    enabled: true,
  },
  rebaseLabel: 'rebase',
  labels: [
    'dependencies',
  ],
  packageRules: [
    {
      allowedVersions: '!/.*-1-8$/',
      matchPackageNames: [
        '/^com.squareup.anvil/',
      ],
    },
    {
      enabled: false,
      matchPackageNames: [
        '/^com.vladsch.flexmark/',
        '/^org.slf4j/',
      ],
    },
  ],
}
